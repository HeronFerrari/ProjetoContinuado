<div class="container mt-4">
  <h2 class="mb-4">Lista de Autores</h2>
  <div class="mb-3">
    <a href="/autorCreate" class="btn btn-success">Novo Autor</a>
  </div>
  <table class="table table-striped table-bordered">
    <thead class="thead-dark">
      <tr>
        <th>ID</th>
        <th>Nome</th>
        <th>Ações</th>
      </tr>
    </thead>
    <tbody>
      {{#each autores}}
        <tr>
          <td>{{id_autor}}</td>
          <td>{{nome}}</td>
          <td>
            <a href="/autorUpdate/{{id_autor}}" class="btn btn-sm btn-primary">Editar</a>
            <form action="/autorDelete" method="POST" style="display:inline;" onsubmit="return confirm('Tem certeza que deseja excluir este autor?');">
              <input type="hidden" name="id_autor" value="{{id_autor}}">
              <button type="submit" class="btn btn-sm btn-outline-danger ml-2">Excluir</button>
            </form>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
  <a href="/home" class="btn btn-secondary">Voltar</a>
</div>