<div class="container" style="max-width: 400px; margin-top: 40px;">
  <div class="card shadow">
    <div class="card-body">
      <h2 class="card-title text-center mb-4">Editar Autor</h2>
      <form action="/autorUpdate/{{autor.id_autor}}" method="post">
        <div class="form-group">
          <label for="nome">Nome:</label>
          <input type="text" class="form-control" id="nome" name="nome" value="{{autor.nome}}" required>
        </div>
        <div class="form-group d-flex justify-content-between">
          <button type="submit" class="btn btn-success">Salvar</button>
          <a href="/autorList" class="btn btn-secondary">Voltar</a>
        </div>
      </form>
    </div>
  </div>