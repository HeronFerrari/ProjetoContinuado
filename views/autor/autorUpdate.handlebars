<div class="container mt-4" style="max-width: 600px;">
  <div class="card shadow">
    <div class="card-body">
      <h2 class="card-title text-center mb-4">Editar Autor</h2>

      {{#if error}}
        <div class="alert alert-danger">{{error}}</div>
      {{/if}}

      <form action="/autorUpdate" method="POST">

        <input type="hidden" name="id_autor" value="{{autor.id_autor}}">

        <div class="form-group">
          <label for="nome">Nome do Autor</label>
          <input type="text" class="form-control" name="nome" id="nome" value="{{autor.nome}}" required>
        </div>

        <div class="form-group d-flex justify-content-between mt-4">
          <button type="submit" class="btn btn-primary">Salvar Alterações</button>
          <a href="/autorList" class="btn btn-secondary">Cancelar</a>
        </div>
      </form>
    </div>
  </div>
</div>