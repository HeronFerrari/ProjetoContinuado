{{#each comentarios}}
 <div>
    <h1><b> Titulo: </b>{{ titulo }} </h1>
    <h2><b> Usuário: </b>{{ usuario_nome }}</h2>
    <h2><b> Livro: </b>{{ livro_titulo }}</h2>
    <h2><b> Autor: </b>{{ autor }} </h2>
    <p> {{ texto }} </p>
    <h3> <b> Id livro:</b> {{ id_livro }} </h3>
    <h3> <b> Id usuario:</b> {{id_usuario}} </h3>
 </div>
 <hr>
   {{#or (eq id_usuario ../usuario.id) (eq ../usuario.tipo 1)}}
   <a href="/comentarioDelete/{{id_comentario}}">Deletar</a>
   {{/or}}
   {{#ifCond id_usuario ../id_usuario}}
      <a href="/comentarioUpdate/{{id_comentario}}">Editar</a>
   {{/ifCond}}
 {{/each}}
 <a href="/home"><button>Voltar ao Início</button></a>