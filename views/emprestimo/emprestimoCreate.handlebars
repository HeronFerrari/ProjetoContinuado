<!-- views/emprestimoCreate.handlebars -->
<div class="container" style="max-width: 400px; margin-top: 40px;">
  <div class="card shadow">
    <div class="card-body">
      <h2 class="card-title text-center mb-4">Registrar Empréstimo</h2>
      <form action="/emprestimoCreate" method="post">
        <div class="form-group">
          <label for="id_livro">Escolha o livro:</label>
          <select class="form-control" name="id_livro" id="id_livro" required>
          {{#each livros}}
          <option value="{{id_livro}}">{{titulo}}</option>
          {{/each}}
          </select>
        </div>
      <button type="submit" class="btn btn-primary">Registrar Empréstimo</button>
    </form>
      <div class="mt-3 text-muted text-center">
        Usuário logado: {{usuario.login}}
      </div>
    </div>
  </div>
</div>