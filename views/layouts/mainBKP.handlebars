<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.bundle.min.js"></script>

    <title>Sistema da biblioteca</title>
  </head>
<body>

<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <a class="navbar-brand d-flex align-items-center" href="/">
   <img src="/img/logo.webp" alt="Logo da Biblioteca Online" style="height:40px; margin-right:10px;">
  Sistema de Biblioteca
  </a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNav">
    <ul class="navbar-nav ml-auto">
      {{#if usuario}}
        <li class="nav-item"><a class="nav-link" href="/logout">Sair</a></li>
      {{else}}
        <li class="nav-item"><a class="nav-link" href="/login">Login</a></li>
      {{/if}}
    </ul>
  </div>
</nav>
<div class="container mt-4">
  {{#unless hideMenu}}
   {{#if (any (not usuario) (ne usuario.tipo 'LEITOR'))}}
    <div class="btn-group mb-4 d-flex justify-content-center" role="group" style="width: 100%;">
      <a href="/" class="btn btn-outline-primary">Início</a>
      {{#if usuario}}
        {{#if (eq usuario.tipo 'ADMIN') }}
          <a href="/usuarioCreate" class="btn btn-outline-primary">Cadastrar Usuário</a>
          <a href="/usuarioList" class="btn btn-outline-primary">Listar Usuários</a>
          <a href="/categoriaCreate" class="btn btn-outline-primary">Cadastrar Categorias</a>
          <a href="/categoriaList" class="btn btn-outline-primary">Listar Categorias</a>
          <a href="/livroCreate" class="btn btn-outline-primary">Cadastrar Livro</a>
          <a href="/livroList" class="btn btn-outline-primary">Listar Livros</a>
          <a href="/comentarioCreate" class="btn btn-outline-primary">Cadastrar Comentário</a>
          <a href="/comentarioList" class="btn btn-outline-primary">Listar Comentários</a>
          <a href="/emprestimoCreate" class="btn btn-outline-primary">Solicitar Empréstimo</a>
          <a href="/reservaCreate" class="btn btn-outline-primary">Reservar Livro</a>
          <a href="/logout" class="btn btn-danger">Sair</a>
        {{/if}}
        {{#if (eq usuario.tipo 'BIBLIOTECARIO') }}
          <a href="/livroCreate" class="btn btn-outline-primary">Cadastrar Livro</a>
          <a href="/livroList" class="btn btn-outline-primary">Listar Livros</a>
          <a href="/comentarioCreate" class="btn btn-outline-primary">Cadastrar Comentário</a>
          <a href="/comentarioList" class="btn btn-outline-primary">Listar Comentários</a>
          <a href="/emprestimoCreate" class="btn btn-outline-primary">Solicitar Empréstimo</a>
          <a href="/reservaCreate" class="btn btn-outline-primary">Reservar Livro</a>
          <a href="/logout" class="btn btn-danger">Sair</a>
        {{/if}}
        {{#if (eq usuario.tipo 'LEITOR') }}
          <a href="/livroList" class="btn btn-outline-primary">Listar Livros</a>
          <a href="/comentarioCreate" class="btn btn-outline-primary">Cadastrar Comentário</a>
          <a href="/comentarioList" class="btn btn-outline-primary">Listar Comentários</a>
          <a href="/emprestimoCreate" class="btn btn-outline-primary">Solicitar Empréstimo</a>
          <a href="/reservaCreate" class="btn btn-outline-primary">Reservar Livro</a>
          <a href="/logout" class="btn btn-danger">Sair</a>
        {{/if}}
      {{else}}
        <a href="/login" class="btn btn-outline-primary">Login</a>
        <a href="/usuarioCreate" class="btn btn-outline-primary">Cadastrar Usuário</a>
      {{/if}}
    </div>
  {{/if}}
  {{/unless}}
  <div class="content-area">
    {{{ body }}}
  </div>
</div>

</body>
</html>