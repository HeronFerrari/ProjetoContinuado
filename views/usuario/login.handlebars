
<!-- Bootstrap já deve estar incluído no layout principal -->
<div class="container" style="max-width: 400px; margin-top: 40px;">
  <div class="card shadow">
    <div class="card-body">
      <h2 class="card-title text-center mb-4">Login</h2>

      {{#if error}}
        <div class="alert alert-danger">{{error}}</div>
      {{/if}}
      {{#if success}}
        <div class="alert alert-success">{{success}}</div>
      {{/if}}

      <form action="/login" method="post" autocomplete="off">
        <div class="form-group">
          <label for="login">Login:</label>
          <input type="text" class="form-control" name="login" id="login" required autofocus>
        </div>
        <div class="form-group">
          <label for="senha">Senha:</label>
          <input type="password" class="form-control" name="senha" id="senha" required>
        </div>
        <button type="submit" class="btn btn-primary btn-block">Entrar</button>
        <a href="/usuarioCreate" class="btn btn-success btn-block mt-2">Cadastrar Usuário</a>
      </form>
    </div>
  </div>
</div>
