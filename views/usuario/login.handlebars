<style>
  body {
    background: #f2f6fc;
    font-family: 'Segoe UI', Arial, sans-serif;
  }
  .login-container {
    background: #fff;
    border-radius: 12px;
    box-shadow: 0 4px 24px #0001;
    width: 350px;
    margin: 40px auto;
    padding: 32px 28px 24px 28px;
    text-align: center;
  }
  .login-container h2 {
    color: #2a4d69;
    margin-bottom: 24px;
  }
  .login-container label {
    display: block;
    margin: 12px 0 4px 0;
    color: #2a4d69;
    font-weight: 500;
    text-align: left;
  }
  .login-container input[type="text"],
  .login-container input[type="password"] {
    width: 100%;
    padding: 8px 10px;
    border: 1px solid #bfc9d1;
    border-radius: 6px;
    margin-bottom: 12px;
    font-size: 1em;
    transition: border 0.2s;
  }
  .login-container input:focus {
    border: 1.5px solid #2a4d69;
    outline: none;
  }
  .login-container .btn-group {
    display: flex;
    gap: 10px;
    margin-top: 10px;
    justify-content: center;
  }
  .login-container button {
    background: #2a4d69;
    color: #fff;
    border: none;
    border-radius: 6px;
    padding: 8px 18px;
    font-size: 1em;
    cursor: pointer;
    transition: background 0.2s, transform 0.1s;
  }
  .login-container button:hover {
    background: #4176a2;
    transform: translateY(-2px) scale(1.04);
  }
  .login-container .msg {
    margin-bottom: 10px;
    font-weight: bold;
    border-radius: 4px;
    padding: 6px 0;
  }
  .login-container .msg.error {
    color: #fff;
    background: #e74c3c;
  }
  .login-container .msg.success {
    color: #fff;
    background: #27ae60;
  }

</style>

<div class="login-container">
  <h2>Login</h2>

  {{#if error}}
    <div class="msg error">{{error}}</div>
  {{/if}}
  {{#if success}}
    <div class="msg success">{{success}}</div>
  {{/if}}

  <form action="/login" method="post" autocomplete="off">
    <label for="login">Login:</label>
    <input type="text" name="login" id="login" required autofocus>

    <label for="senha">Senha:</label>
    <input type="password" name="senha" id="senha" required>

    <div class="btn-group">
      <button type="submit">Entrar</button>
    </div>
  </form>
</div>
