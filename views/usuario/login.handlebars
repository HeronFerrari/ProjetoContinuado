<style>
    body { background-color: #f8f9fa; }
</style>

<div class="container" style="max-width: 450px; margin-top: 50px;">
    <div class="card shadow-lg">
        <div class="card-body p-5">
            <h2 class="card-title text-center mb-4">Bem-vindo à Biblioteca</h2>

            {{#if error}}
                <div class="alert alert-danger">{{error}}</div>
            {{/if}}
            {{#if logoutMsg}}
                 <div class="alert alert-success">{{logoutMsg}}</div>
            {{/if}}

            <form action="/login" method="post" autocomplete="off">
                <div class="form-group mb-3">
                    <label for="login">Login:</label>
                    <input type="text" class="form-control" name="login" id="login" required autofocus>
                </div>
                <div class="form-group mb-4">
                    <label for="senha">Senha:</label>
                    <input type="password" class="form-control" name="senha" id="senha" required>
                </div>
                <button type="submit" class="btn btn-primary w-100 btn-lg">Entrar</button>
            </form>
            <div class="text-center mt-3">
                 <a href="/usuarioCreate">Não tem uma conta? Cadastre-se</a>
            </div>
        </div>
    </div>
</div>