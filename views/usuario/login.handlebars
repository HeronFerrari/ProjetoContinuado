<h2>Login</h2>

{{#if error}}
  <div style="color: red;">{{error}}</div>
{{/if}}
{{#if success}}
  <div style="color: green;">{{success}}</div>
{{/if}}

<form action="/login" method="post">
  Login: <input type="text" name="login"><br>
  Senha: <input type="password" name="senha"><br>
  <input type="submit" value="Entrar">
</form>