<!-- views/usuario/usuarioList.handlebars -->
<div class="container mt-4">
  <h2 class="mb-4">Lista de Usuários</h2>
  <table class="table table-striped table-bordered">
    <thead class="thead-dark">
      <tr>
        <th>Login</th>
        <th>Senha</th>
        <th>Tipo</th>
        <th>Ações</th>
      </tr>
    </thead>
    <tbody>
      {{#each usuarios}}
      <tr>
        <td>{{login}}</td>
        <td>{{senha}}</td>
        <td>{{tipo}}</td>
        <td>
          <a href="/usuarioUpdate/{{id}}" class="btn btn-sm btn-primary">Editar</a>
          <a href="/usuarioDelete/{{id}}" class="btn btn-sm btn-danger ml-2">Deletar</a>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
  <div class="d-flex justify-content-end">
    <a href="/home" class="btn btn-secondary">Voltar</a>
  </div>
</div>