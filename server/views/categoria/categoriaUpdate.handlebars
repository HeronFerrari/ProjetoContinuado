<div class="container" style="max-width: 400px; margin-top: 40px;">
  <div class="card shadow">
    <div class="card-body">
      <h2 class="card-title text-center mb-4">Editar Categoria</h2>
      <form action="/categoriaUpdate" method="post">
        <input type="hidden" name="id_categoria" value="{{categoria.id_categoria}}">
        <div class="form-group">
          <label for="nome">Nome:</label>
          <input type="text" class="form-control" name="nome" id="nome" value="{{categoria.nome}}" required>
        </div>
        <div class="form-group">
          <label for="tipo">Tipo:</label>
          <input type="text" class="form-control" name="tipo" id="tipo" value="{{categoria.tipo}}" required>
        </div>
        <div class="form-group d-flex justify-content-between">
          <button type="submit" class="btn btn-success">Editar</button>
          <a href="/categoriaList" class="btn btn-secondary">Voltar</a>
        </div>
      </form>
    </div>
  </div>
</div>