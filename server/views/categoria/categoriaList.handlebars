<div class="container mt-4">
  {{#if error}}
    <div class="alert alert-danger">{{error}}</div>
  {{/if}}
  <h2 class="mb-4">Categorias</h2>
  <table class="table table-striped table-bordered">
    <thead class="thead-dark">
      <tr>
        <th>Nome</th>
        <th>Tipo</th>
        <th>Editar</th>
        <th>Deletar</th>
      </tr>
    </thead>
    <tbody>
      {{#each categorias}}
      <tr>
        <td>{{nome}}</td>
        <td>{{tipo}}</td>
        <td><a href="/categoriaUpdate/{{id_categoria}}" class="btn btn-sm btn-primary">Editar</a></td>
        <td><a href="/categoriaDelete/{{id_categoria}}" class="btn btn-sm btn-danger" onclick="return confirm('A categoria serÃ¡ deletada, deseja prosseguir ?');">Deletar</a></td>
      </tr>
      {{/each}}
    </tbody>
  </table>
  <div class="d-flex justify-content-between">
    <a href="/categoriaCreate" class="btn btn-success">Cadastrar Categoria</a>
    <a href="/home" class="btn btn-secondary">Voltar</a>
  </div>
</div>