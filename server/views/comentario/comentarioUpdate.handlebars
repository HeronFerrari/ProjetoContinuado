<!-- views/comentario/comentarioUpdate.handlebars -->
<div class="container" style="max-width: 500px; margin-top: 40px;">
  <div class="card shadow">
    <div class="card-body">
      <h2 class="card-title text-center mb-4">Editar Comentário</h2>
      <form action="/comentarioUpdate" method="post">
        <input type="hidden" name="id_comentario" value="{{comentario._id}}">
        <div class="form-group">
          <label for="titulo">Título:</label>
          <input type="text" class="form-control" name="titulo" id="titulo" value="{{comentario.titulo}}" required>
        </div>
        <div class="form-group">
          <label for="texto">Texto:</label>
          <input type="text" class="form-control" name="texto" id="texto" value="{{comentario.texto}}" required>
        </div>
        <div class="form-group d-flex justify-content-between">
          <button type="submit" class="btn btn-success">Salvar</button>
          <a href="/comentarioList" class="btn btn-secondary">Voltar</a>
        </div>
      </form>
    </div>
  </div>
</div>