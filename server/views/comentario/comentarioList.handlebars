<div class="container mt-4">
  <h2 class="mb-4">Comentários</h2>
  {{#each comentarios}}
    <div class="card mb-3">
      <div class="card-body">
        <h4 class="card-title"><b>Título:</b> {{titulo}}</h4>
        <h6 class="card-subtitle mb-2 text-muted"><b>Usuário:</b> {{usuario_nome}}</h6>
        <h6 class="card-subtitle mb-2 text-muted"><b>Livro:</b> {{livro_titulo}}</h6>
        <h6 class="card-subtitle mb-2 text-muted"><b>Autor:</b> {{autor}}</h6>
        <p class="card-text">{{texto}}</p>
        <small class="text-muted"><b>Id livro:</b> {{id_livro}} | <b>Id usuário:</b> {{id_usuario}}</small>
        <div class="mt-2">
          {{#or (eq id_usuario ../usuario.id) (eq ../usuario.tipo 'ADMIN')}}
            <form action="/comentarioDelete" method="POST" style="display:inline;" onsubmit="return confirm('Tem certeza que deseja excluir este comentário?');">
              <input type="hidden" name="id_comentario" value="{{_id}}">
              <button type="submit" class="btn btn-sm btn-danger">Deletar</button>
            </form>
          {{/or}}
          {{#ifCond id_usuario ../id_usuario}}
            <a href="/comentarioUpdate/{{_id}}" class="btn btn-sm btn-primary ml-2">Editar</a>
          {{/ifCond}}
        </div>
      </div>
    </div>
  {{/each}}
  <a href="/home" class="btn btn-secondary">Voltar ao Início</a>
</div>